<!DOCTYPE html>
<html>
<head>
  <title>Instacopy</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <%= link_to 'Instacopy', root_path, :class => 'navbar-brand' %>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to new_post_path do %>
          <i style="font-size:3.5em;" class="glyphicon glyphicon-send"></i>
          
          <% end %>
        </li>
        <% if user_signed_in? %>
          <li>
            <%= link_to user_path(current_user) do %>
            <i style="font-size:3.5em;" class="glyphicon glyphicon-user"></i>
            
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, :method => :delete  do %>
            <i style="font-size:3.5em;" class="glyphicon glyphicon-eject"></i>
            
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to  new_user_session_path do %>
            <i style="font-size:3.5em;" class="glyphicon glyphicon-inbox"></i>
            
            <% end %>
          </li>  
          <li>
            <%= link_to new_user_registration_path  do %>
            <i style="font-size:3.5em;" class="glyphicon glyphicon-pencil"></i>
            
            <% end %>
          </li> 
        <% end %>  
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<% if notice.present? %>
  <p class="alert alert-info"><%= notice %></p>
<% end %>
<% if alert.present? %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>


<%= yield %>

</body>
</html>
