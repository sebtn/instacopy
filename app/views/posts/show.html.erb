
<div class="box-each col-xs-12">
	<h1><%= @post.title %></h1>
	<p><%= @post.description %></p>
	<br />
	<br />
	<div class='pull-right'>
	<% if current_user && current_user == @post.user %>	
		<!-- Button trigger modal -->
		<button class="btn btn-primary" data-toggle="modal" data-target="#myModal">
		  Add comment</button>
		<%= link_to 'Edit', edit_post_path(@post), :class => 'btn btn-primary' %>
		<%= link_to 'Destroy', post_path(@post), :method => :delete, :data => {:confirm => 'Are you sure?'}, :class => 'btn btn-danger' %>		
	<% end %>	
	</div>
</div>

<div class='clear'></div>
<br />

<!-- Modal for Photos -->

<div class="box-in-posts col-xs-10 col-xs-offset-1">
	<h1>Upload an image</h1>
	<%= simple_form_for @photo, :url => post_photos_path(@post) do |f| %>
		<%= f.input :picture %>	
		<br />
		<%= f.submit 'Create', :class => 'btn btn-success' %>
	<% end %>	
</div>


<!-- Modal for comments -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Add comment</h4>
      </div>
      <%= simple_form_for @comment, :url => post_comments_path(@post) do |f| %>
      	<div class="modal-body">  	
	  			<%= f.input :message %>
			 </div>	
			<div class="modal-footer">
         	<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>    
         	<%= f.submit "Add a comment", :class => 'btn btn-primary' %>  
     		</div>
      <% end %>
    </div>
  </div>
</div>
<br />


<div class="col-xs-10 col-xs-offset-0">
	<h1 class="pull-left">Comments</h1>
</div>
<div class='clear'></div>

<% @post.comments.each do |comment| %>
  <div class="col-xs-10 col-xs-offset-1">
	<div>
		<blockquote>
			<b><%= comment.message %></b>
			<small><%= comment.user.email %></small>
		</blockquote>
	</div>		
  </div>		
<% end %>	

<div class="clear"></div>




