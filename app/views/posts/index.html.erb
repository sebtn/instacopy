
<% @posts.reverse.each do |post| %>
	<div class="box-in-posts col-xs-12">
		<h2><%= link_to post.title, post_path(post) %></h2><br />
		<p><%= post.description %></p>

		<% if post.user.present? %>
			<b><small><%= post.user.email %></small></b>
		<% end %>	
		<div class='clear'></div>
		<br />
		<% if post.comments.present? %>
			<div class="col-xs-12 col-xs-offset-0">
				<blockquote>
					<%= post.comments.last.message %>
					<small><%= post.comments.last.user.email %></small> 
				</blockquote>
			</div>	
		<% end %>

		<% if post.photos.present? %>
			<div class="col-xs-12 col-xs-offset-0">
				<% if post.photos.last.picture.present? %>
					<%= image_tag post.photos.last.picture, :class => 'img-responsive' %>
				<% end %>
			</div>  
		<% end %>
	</div>	
<% end %>	