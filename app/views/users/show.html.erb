

<div class="box-profile">	
	<div class="col-xs-1 pull-right">
		<%= image_tag 'user.png' %>
	</div>

	<div class="col-xs-3">	
		<h1><%= @user.email %></h1>
		<h3>Active since: <%= @user.created_at.strftime("%B/%d/%Y") %></h3>
		<h4><%= @user.comments.count %> total comments</h4>
	</div>	
<div class="clear"></div>
</div>	

<br />
<h1 class="text-center">Comments made</h1>
<br/ >
<% @user.comments.each do |comment| %>
	<div class="col-xs-12">
		<h2 class="text-center"><%= link_to comment.post.title, post_path(comment.post) %><h2/> 
	    <blockquote>
	      <%= comment.message %>
	      <small><%= comment.user.email %></small>
	    </blockquote>
  </div>
<% end %>

<div class="clear"></div>
<br /><br />
<h1 class="text-center">Posted</h1>
<br /><br />
<% @user.posts.each do |post| %>
	<div class="box-in-posts-1 col-xs-10 col-xs-offset-1">
		<h2><%= link_to post.title, post_path(post) %></h2><br />
		<p><%= post.description %></p><br />
		<% if post.user.present? %>
			<small><%= post.user.email %></small>
		<% end %>	
	</div>	
<% end %>	





